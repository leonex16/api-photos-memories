{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    // so that if your project isn't using TypeScript, it still has autocomplete
    "allowJs": false,

    // "bun-types" is the important part
    "types": ["bun-types"],

    "baseUrl": "./src",
    "paths": {
      "@config/*": ["./config/*"],
      "@core/*": ["./core/*"],
      "@constants/*": ["./constants/*"],
      "@features/*": ["./features/*"],
      "@utils/*": ["./utils/*"],
    }
  }
}
